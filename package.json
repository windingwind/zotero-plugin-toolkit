{
  "name": "zotero-plugin-toolkit",
  "type": "module",
  "version": "5.1.0-beta.9",
  "packageManager": "pnpm@10.13.1",
  "description": "Toolkit for Zotero plugins",
  "author": "windingwind",
  "license": "MIT",
  "homepage": "https://github.com/windingwind/zotero-plugin-toolkit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/windingwind/zotero-plugin-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/windingwind/zotero-plugin-toolkit/issues"
  },
  "keywords": [
    "zotero",
    "plugin",
    "developer",
    "toolkit"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "npm run build:tsc && npm run build:tsdown",
    "build:tsdown": "tsdown",
    "build:tsc": "tsc --noEmit",
    "lint:check": "prettier . --check && eslint .",
    "lint:fix": "prettier . --write && eslint . --fix",
    "release": "bumpp --execute \"npm run build\" --all",
    "docs:generate": "typedoc",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "prepare": "husky",
    "update-deps": "npm update --save"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@types/node": "^24.1.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "bumpp": "^10.2.0",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "react-intl": "^7.1.11",
    "tsdown": "^0.13.0",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.7.1",
    "typedoc-vitepress-theme": "^1.1.2",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3",
    "zotero-types": ">=4.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "directories": {
    "lib": "dist",
    "doc": "docs"
  },
  "prettier": {},
  "lint-staged": {
    "*": [
      "prettier --write -u",
      "eslint --fix"
    ]
  }
}
